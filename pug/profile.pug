//MIXIN
mixin profile-content(title)
  - id = "profile-"+title+"-P"
    .col-md-6.profile-profile-content-P.container
      div.tag-wrapper.d-flex.justify-content-between
        h4.text-uppercase #{title}
        i.fas.fa-edit.profile-edit-icon-P.edit-btn.text-center
      .content-wrapper
        .content-inner.d-flex
          .container.profile-wrapper.p-2.d-flex.align-items-center.justify-content-between
            p.profile-profile-detail-P.d-inline-block.my-auto(id=id) John Doe
            // i.fas.fa-edit.profile-edit-icon-P.edit-btn
          .edit-field.my-auto(data-display="true")
            form
              span.input.input--minoru
                input.input__field.input__field--yoko(type='text' id=title)
                label.input__label.input__label--yoko(for=title)
                  span.input__label-content.input__label-content--yoko #{title}
                  span.submit-btn.text-center
                    button.btn(type="submit")
                      i.fas.fa-check

